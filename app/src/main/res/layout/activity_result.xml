<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_002_i505_013_game_landscapes_set_15"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWinningHorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="#45C910"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:shadowColor="#1E0C3D"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:text="Purple Horse Wins!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutBalance" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/crown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWinningHorse" />

    <LinearLayout
        android:id="@+id/horseLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWinningHorse">

        <!-- Ngựa 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHorse1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvHorse1Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Lost"
                android:textColor="#FF0000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHorse1BetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="---"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Ngựa 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHorse2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvHorse2Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Winner"
                android:textColor="#4CAF50"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHorse2BetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="---"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Ngựa 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHorse3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvHorse3Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Lost!"
                android:textColor="#FF0000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHorse3BetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="---"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvHorse1Bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="---"
        android:textColor="#311D43"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horseLayout" />

    <ImageView
        android:id="@+id/ivCoins1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/coin"
        app:layout_constraintEnd_toStartOf="@+id/tvHorse2Bet"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toEndOf="@+id/tvHorse1Bet"
        app:layout_constraintTop_toTopOf="@+id/tvHorse1Bet" />

    <TextView
        android:id="@+id/tvHorse2Bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="128dp"
        android:gravity="center"
        android:text="---"
        android:textColor="#311D43"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvYouwin"
        app:layout_constraintStart_toEndOf="@+id/tvHorse1Bet"
        app:layout_constraintTop_toTopOf="@+id/tvHorse1Bet"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivCoins2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/coin"
        app:layout_constraintStart_toEndOf="@+id/tvHorse2Bet"
        app:layout_constraintTop_toTopOf="@+id/tvHorse2Bet" />

    <TextView
        android:id="@+id/tvHorse3Bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="52dp"
        android:gravity="center"
        android:text="---"
        android:textColor="#311D43"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvHorse2Bet"
        app:layout_constraintTop_toTopOf="@+id/tvHorse1Bet" />

    <ImageView
        android:id="@+id/ivCoins3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/coin"
        app:layout_constraintStart_toEndOf="@+id/tvHorse3Bet"
        app:layout_constraintTop_toTopOf="@+id/tvHorse3Bet" />

    <LinearLayout
        android:id="@+id/layoutBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EFEFC4"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:textColor="#FAA600"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCoins"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/coin" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvYouwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#ffffff"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:text="Result:"
        android:textColor="#131E5F"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnPlayAgain"
        app:layout_constraintEnd_toStartOf="@+id/tvReward"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horseLayout"
        app:layout_constraintVertical_bias="0.714" />

    <TextView
        android:id="@+id/tvReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:text="+ 30"
        android:textColor="#FFC000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvYouwin" />

    <ImageView
        android:id="@+id/ivCoins4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/coin"
        app:layout_constraintBottom_toTopOf="@+id/btnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toEndOf="@+id/tvReward"
        app:layout_constraintTop_toTopOf="@+id/tvReward"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="#FAC401"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:shadowColor="#ffffff"
        android:shadowDx="4"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:text="PLAY AGAIN"
        android:textColor="#1E0C3D"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horseLayout" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="#1F8BB8"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="RESET"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnPlayAgain"
        app:layout_constraintTop_toTopOf="@+id/btnPlayAgain"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
