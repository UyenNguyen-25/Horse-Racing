<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/bg_sea">

    <TextView
        android:id="@+id/tvWinningHorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Purple Seahorse Wins!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="#FF5722"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="91dp" />

    <LinearLayout
        android:id="@+id/horseLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWinningHorse">

        <!-- Ngựa 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHorse1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/red_horse_foreground" />

            <TextView
                android:id="@+id/tvHorse1Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Lost"
                android:textColor="#FF0000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHorse1BetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="---"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Ngựa 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgHorse2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/purple_horse_foreground" />

            <TextView
                android:id="@+id/tvHorse2Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Winner"
                android:textColor="#4CAF50"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHorse2BetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="---"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Ngựa 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHorse3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/orange_horse_foreground" />

            <TextView
                android:id="@+id/tvHorse3Result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Lost!"
                android:textColor="#FF0000"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHorse3BetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="---"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvBalance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CDDC39"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:text="80 coins"
        android:textColor="#FF9800"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/tvYouwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You win:"
        android:textStyle="bold"
        android:shadowColor="#ffffff"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:textColor="#131E5F"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="472dp" />

    <TextView
        android:id="@+id/tvReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 30"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="6"
        android:textColor="#FFC000"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/tvYouwin"
        tools:layout_editor_absoluteX="230dp" />

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#DB870B"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="Play Again"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horseLayout" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="#043E57"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnPlayAgain"
        app:layout_constraintTop_toTopOf="@+id/btnPlayAgain"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
